  '16.各社共通': {},
  '17.機械故障': {},
  '18.設計トラブル発生': {}
}

%>
<div class="widget">
  <h2 class="title">リスクに対処する</h2>
  <div class="content">
<% deals.each do |key, value| %>
<%= button_tag key, style: 'width: 30%' %>
<% end %>
  </div>
</div>


<div class="widget">
  <h2 class="title">意思決定（1回につき1項目選択）</h2>
  <div class="content">
<% decisions_once.each do |key, value| %>
<% if value[:large] %>
<div><%= button_tag key, style: 'width: 80%' %></div>
<% else %>
<%= button_tag key, style: 'width: 18%' %>
<% end %>
<% end %>
  </div>
</div>

<div class="widget">
  <h2 class="title">意思決定（いつでも実施可能）</h2>
  <div class="content">
<% decisions_anytime.each do |key, value| %>
<% if value[:large] %>
<%= button_tag key, style: 'width: 40%' %>
<% else %>
<%= button_tag key, style: 'width: 30%' %>
<% end %>
<% end %>
  </div>
</div>

<div class="widget">
  <h2 class="title">仕訳</h2>
  <div class="content">
<% journals.each do |button| %>
<%= button_tag button, style: 'width: 125px' %>
<% end %>
  </div>
</div>
