<div id="decision_once" class="widget">
  <h2 class="title">意思決定（1回につき1項目選択）</h2>
  <div class="content">
    <div class="table-container">
      <% Decision.once_buttons.each do |row| %>
        <div class="row-box">
          <div class="cell-box">
            <% if row.length == 1 %>
              <%= button_tag row.keys[0], class: 'single large' %>
            <% else %>
              <% row.each do |key, value| %><%= button_tag key, class: 'double ' + (value[:color] || '') -%><% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
